{% extends "OCPlatformeBundle::layout.html.twig" %}
{% block title %}
    page de Connexion - {{ parent() }}
{% endblock %}
{% block body %}
    {% if error  %}
        <div class="alert alert-danger">{{ error.message }}</div>
    {% endif %}
    <form action="{{ path('login_check') }}" method="post" class="well">
        <div class="form-group">
            <label for="username">Login :</label>
            <input type="text" name="_username" id="username" value="{{ last_username }}" class="form-control">
        </div>

        <div class="form-group">
            <label for="password">Mot de passe :</label>
            <input type="password" name="_password" id="password" class="form-control">
        </div>

        <br>
        <button type="submit" class="btn btn-block btn-primary">Connexion</button>
    </form>
{% endblock %}