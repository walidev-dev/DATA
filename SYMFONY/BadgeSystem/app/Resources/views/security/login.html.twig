{% extends 'base.html.twig' %}

{% block body %}
    {% if errors %}
        <div class="alert alert-danger">{{ errors.messageKey | trans(errors.messageData,'security') }}</div>
    {% endif %}
    <h1>Se connecter</h1>

    <form action="{{ path('login') }}" method="post">
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" name="_username" id="email" class="form-control" value="{{ lastUsername }}">
        </div>
        <div class="form-group">
            <label for="password">Mot de passe</label>
            <input type="password" name="_password" id="password" class="form-control">
        </div>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Connexion</button>
        </div>
    </form>
{% endblock %}